<?xml version="1.0" encoding="utf-8"?>
<!-- ECG子设备布局 - 与FacialCollection保持一致 -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_bg_light">

    <!-- 设备名称和状态行 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/macAddress"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="ECG设备"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <!-- 电池电量显示 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginEnd="8dp">

            <ImageView
                android:id="@+id/batteryIcon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@android:drawable/ic_lock_idle_charging"
                android:visibility="gone" />

            <TextView
                android:id="@+id/batteryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textSize="12sp"
                android:textColor="#666666" />
        </LinearLayout>

        <!-- 连接按钮 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/connectBtn"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="连接"
            android:textSize="12sp"
            app:cornerRadius="8dp" />
    </LinearLayout>

    <!-- 导联状态和测量状态行 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <!-- 导联状态指示 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginEnd="16dp">

            <View
                android:id="@+id/leadStatusIndicator"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/circle_bg_primary" />

            <TextView
                android:id="@+id/leadStatusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="导联未知"
                android:textSize="12sp"
                android:textColor="#666666" />
        </LinearLayout>

        <!-- 心率显示 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginEnd="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HR: "
                android:textSize="12sp"
                android:textColor="#E91E63" />

            <TextView
                android:id="@+id/heartRateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-- bpm"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#E91E63" />
        </LinearLayout>

        <!-- 呼吸率显示 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RR: "
                android:textSize="12sp"
                android:textColor="#2196F3" />

            <TextView
                android:id="@+id/respiratoryRateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-- rpm"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#2196F3" />
        </LinearLayout>
    </LinearLayout>

    <!-- 测量时长和状态行 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/measurementStatusText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="等待连接..."
            android:textSize="12sp"
            android:textColor="#999999" />

        <!-- 测量时长 -->
        <TextView
            android:id="@+id/measurementDurationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp"
            android:textColor="#4CAF50"
            android:visibility="gone" />
    </LinearLayout>

    <!-- 操作按钮行 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/toggleSamplingBtn"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_marginEnd="4dp"
            android:text="开始录制"
            android:textSize="12sp"
            app:cornerRadius="8dp"
            app:backgroundTint="#4CAF50" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/eraseBtn"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="清除历史"
            android:textSize="12sp"
            app:cornerRadius="8dp"
            app:strokeColor="#FF9800" />
    </LinearLayout>

    <!-- 用户信息行（可折叠） -->
    <LinearLayout
        android:id="@+id/userInfoContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginBottom="8dp">

        <EditText
            android:id="@+id/etUserInfo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="输入用户标识 (15 ASCII)"
            android:maxLength="15"
            android:singleLine="true"
            android:textSize="12sp"
            android:padding="8dp"
            android:background="@drawable/rounded_bg_light" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/setUserBtn"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="36dp"
                android:text="写入用户信息"
                android:textSize="11sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/eraseUserBtn"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="36dp"
                android:text="清除用户信息"
                android:textSize="11sp"
                android:textColor="#F44336" />
        </LinearLayout>
    </LinearLayout>

    <!-- 日志显示 -->
    <TextView
        android:id="@+id/tvLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="等待连接..."
        android:textSize="11sp"
        android:textColor="#888888"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginBottom="8dp" />

    <!-- ECG波形图 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ECG波形"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="#03A9F4"
        android:layout_marginBottom="4dp" />

    <com.tsinghua.sample.PlotView
        android:id="@+id/plotView"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="8dp" />

</LinearLayout>
