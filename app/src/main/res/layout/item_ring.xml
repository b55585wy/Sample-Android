<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 设备头部信息 - iOS风格可折叠区块 -->
        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="4dp">

            <!-- 设备名称 -->
            <TextView
                android:id="@+id/deviceName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="指环数据"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- 连接状态文本 -->
            <TextView
                android:id="@+id/statusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未连接"
                android:textSize="12sp"
                android:textColor="#FF9800"
                android:layout_marginEnd="8dp" />

            <!-- 展开/折叠箭头 -->
            <ImageView
                android:id="@+id/expandArrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/arrow_down_float"
                android:contentDescription="展开"
                android:rotation="0" />

        </LinearLayout>

        <!-- 隐藏的按钮引用（保持ViewHolder兼容性） -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/connectBtn"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:visibility="gone"
            android:text="连接" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/startBtn"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:visibility="gone"
            android:text="开始录制" />

        <ImageButton
            android:id="@+id/settingsBtn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            android:contentDescription="设置" />

        <ImageView
            android:id="@+id/deviceIcon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />

        <!-- 展开信息区域 -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/infoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            android:fillViewport="false"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="@drawable/rounded_bg_light">

                <!-- 连接控制按钮 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/connectBtn2"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="44dp"
                        android:layout_marginEnd="4dp"
                        android:text="连接"
                        android:textSize="13sp"
                        app:backgroundTint="#2196F3"
                        app:cornerRadius="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/scanBtn"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="44dp"
                        android:layout_marginEnd="4dp"
                        android:text="扫描"
                        android:textSize="13sp"
                        app:backgroundTint="#2196F3"
                        app:cornerRadius="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/disconnectBtn"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="44dp"
                        android:text="断开"
                        android:textSize="13sp"
                        app:cornerRadius="8dp"
                        app:strokeColor="#F44336" />

                </LinearLayout>

                <!-- 时间操作按钮行 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/timeUpdateBtn"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:layout_marginEnd="4dp"
                        android:text="更新时间"
                        android:textSize="12sp"
                        app:backgroundTint="#2196F3"
                        app:cornerRadius="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/timeSyncBtn"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:text="时间校准"
                        android:textSize="12sp"
                        app:backgroundTint="#2196F3"
                        app:cornerRadius="8dp" />

                </LinearLayout>

                <!-- 状态日志显示区域 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="状态日志"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#666666"
                    android:layout_marginBottom="4dp"/>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="#FFFFFF"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/tvLog"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="点击'开始录制'开始记录会话日志..."
                        android:textSize="11sp"
                        android:textColor="#333333"
                        android:fontFamily="monospace" />

                </ScrollView>

                <!-- 主动测量控制区域 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp"
                    android:padding="12dp"
                    android:background="#FFFFFF">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="主动测量"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50"
                        android:layout_marginBottom="8dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="测量时间(秒)"
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:layout_marginEnd="8dp" />

                        <EditText
                            android:id="@+id/editText_measurement_time"
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:text="30"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:background="@drawable/rounded_bg_light"
                            android:inputType="number"
                            android:maxLines="1" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_start_measurement"
                            style="@style/Widget.MaterialComponents.Button"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="40dp"
                            android:text="开始测量"
                            android:textSize="12sp"
                            android:layout_marginEnd="8dp"
                            app:backgroundTint="#4CAF50"
                            app:cornerRadius="8dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_stop_collection"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="40dp"
                            android:text="停止采集"
                            android:textSize="12sp"
                            android:enabled="false"
                            app:cornerRadius="8dp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/text_measurement_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="测量状态: 就绪"
                        android:textSize="11sp"
                        android:textColor="#666666"
                        android:layout_marginTop="8dp"/>

                </LinearLayout>

                <!-- 运动控制区域 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp"
                    android:padding="12dp"
                    android:background="#FFFFFF">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="运动控制"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#FF9800"
                        android:layout_marginBottom="8dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="总时长"
                            android:textSize="11sp"
                            android:textColor="#666666"
                            android:layout_marginEnd="4dp" />

                        <EditText
                            android:id="@+id/editText_exercise_duration"
                            android:layout_width="60dp"
                            android:layout_height="36dp"
                            android:text="14400"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:background="@drawable/rounded_bg_light"
                            android:inputType="number"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="片段"
                            android:textSize="11sp"
                            android:textColor="#666666"
                            android:layout_marginEnd="4dp" />

                        <EditText
                            android:id="@+id/editText_segment_duration"
                            android:layout_width="60dp"
                            android:layout_height="36dp"
                            android:text="600"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:background="@drawable/rounded_bg_light"
                            android:inputType="number" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_start_exercise"
                            style="@style/Widget.MaterialComponents.Button"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="40dp"
                            android:text="开始运动"
                            android:textSize="12sp"
                            android:layout_marginEnd="8dp"
                            app:backgroundTint="#FF9800"
                            app:cornerRadius="8dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_stop_exercise"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="40dp"
                            android:text="结束运动"
                            android:textSize="12sp"
                            app:cornerRadius="8dp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/text_exercise_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="运动状态: 就绪"
                        android:textSize="11sp"
                        android:textColor="#666666"
                        android:layout_marginTop="8dp"/>

                </LinearLayout>

                <!-- PPG数据图表区域 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PPG实时数据"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"/>

                <com.tsinghua.sample.PlotView
                    android:id="@+id/plotViewG"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="#FFFFFF"
                    android:layout_marginBottom="4dp" />

                <com.tsinghua.sample.PlotView
                    android:id="@+id/plotViewI"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="#FFFFFF"
                    android:layout_marginBottom="4dp" />

                <com.tsinghua.sample.PlotView
                    android:id="@+id/plotViewR"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="#FFFFFF"
                    android:layout_marginBottom="8dp" />

                <!-- 加速度数据图表区域 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="加速度数据"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#FF9800"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>

                <com.tsinghua.sample.PlotView
                    android:id="@+id/plotViewX"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#FFFFFF"
                    android:layout_marginBottom="4dp" />

                <com.tsinghua.sample.PlotView
                    android:id="@+id/plotViewY"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#FFFFFF"
                    android:layout_marginBottom="4dp" />

                <com.tsinghua.sample.PlotView
                    android:id="@+id/plotViewZ"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#FFFFFF"
                    android:layout_marginBottom="8dp" />

                <!-- 文件管理区域 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="文件管理"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#2196F3"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/requestFileListBtn"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:layout_marginEnd="4dp"
                        android:text="获取列表"
                        android:textSize="11sp"
                        app:backgroundTint="#2196F3"
                        app:cornerRadius="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/downloadSelectedBtn"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:layout_marginEnd="4dp"
                        android:text="下载选中"
                        android:textSize="11sp"
                        app:backgroundTint="#2196F3"
                        app:cornerRadius="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/formatFileSystemBtn"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:text="格式化"
                        android:textSize="11sp"
                        app:backgroundTint="#F44336"
                        app:cornerRadius="8dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/fileListStatusText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="文件列表 (未获取)"
                    android:textSize="11sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="8dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/fileListRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="#FFFFFF"
                    android:nestedScrollingEnabled="false"
                    android:padding="4dp" />

                <!-- 单文件下载 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/editText_file_name"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:hint="文件名"
                        android:textSize="12sp"
                        android:background="@drawable/rounded_bg_light"
                        android:padding="8dp"
                        android:layout_marginEnd="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_download_single_file"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="下载"
                        android:textSize="12sp"
                        app:backgroundTint="#2196F3"
                        app:cornerRadius="8dp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
